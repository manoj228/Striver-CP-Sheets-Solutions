Link to the Problem: https://codeforces.com/problemset/problem/282/A

Input1 :
1
++X
Output1 : 1

Input2 :
2
X++
--X
Output2 : 0

#include <bits/stdc++.h>
using namespace std;
 
int main() {
	
	int t, x = 0;
	cin >> t;
	
	while(t--)
	{
		string str;
		cin >> str;
		
		int len = str.size();
		
		if(str[0] == '+' || str[len-1] == '+')
		{
			x++;
		}
		else{
			x--;
		}
	}
	
	cout << x << endl;
	
	return 0;
}
